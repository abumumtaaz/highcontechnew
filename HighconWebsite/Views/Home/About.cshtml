@{
    ViewBag.Title = "About";
}

@section featured
{
    <!-- breadcrumb start -->
    <!-- ================ -->
    <div class="breadcrumb-container">
        <div class="container">
            <ol class="breadcrumb">
                <li><i class="fa fa-home pr-10"></i><a href="/Home/Index">Home</a></li>
                <li class="active">About Us</li>
            </ol>
        </div>
    </div>
    <!-- breadcrumb end -->

    <!-- main-container start -->
    <!-- ================ -->
    <section class="main-container padding-bottom-clear">

        <div class="container">
            <div class="row">

                <!-- main start -->
                <!-- ================ -->
                <div class="main col-md-12">
                    <h1 class="title">About Us</h1>
                    <div class="separator-2"></div>
                    <div class="row">
                        <div class="col-md-6">
                            <p>Highcon Technologies was borne out of the quest for an indigenous technological firm that would be able to use cutting edge
                                technologies to provide solutions to problems of various kind.
                            </p>
                            <p>We have a great team of developers who have developed a great passion for software development.
                                We therefore have great power in delivering software of any kind, provided it would solve a problem for you.
                            </p>
                            <ul class="list-icons">
                                <li><i class="icon-check-1"></i>We are here to support you</li>
                                <li><i class="icon-check-1"></i>Free updates to our solutions</li>
                                <li><i class="icon-check-1"></i>Unlimited options and variations</li>
                                <li><i class="icon-check-1"></i>Latest Technologies</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <div class="overlay-container overlay-visible">
                                <img src="~/Content/images/page-about-2.jpg" alt="">
                                <div class="overlay-bottom hidden-xs">
                                    <div class="text">
                                        <h3 class="title">We Love To Code</h3>
                                    </div>
                                </div>
                                <a href="~/Content/images/page-about-2.jpg" class="popup-img overlay-link" title="image title"><i class="icon-plus-1"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- main end -->

            </div>
        </div>

        

    </section>
    <!-- main-container end -->
}
